
@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SendEmail">
			<div asp-validation-summary="All"></div>  @* For Errors *@
			<div class="input-box">
				<input type="text" asp-for="Email" placeholder="Enter your E-Mail" required="">
			</div>

			<div class="input-box button">
				<input type="Submit" value="Send Email">
			</div>
		</form>

	</div>
</div>
@section ValidationScriptSection{
	<partial name="_ValidationScriptsPartial" />
}


