@model ActorViewModel


<div class="form-group">
    <label class="col-form-label"  asp-for="Picture">Profile Picture</label>
    <input class="form-control"  asp-for="Picture" />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="FullName">Full Name</label>
    <input class="form-control" asp-for="FullName" />
    <span asp-validation-for="FullName" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Bio">Biography</label>
    <input class="form-control" asp-for="Bio" />
    <span asp-validation-for="Bio" class="text-danger"></span>
</div>

